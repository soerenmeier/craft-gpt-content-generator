{% extends '_layouts/cp' %}
{% set title = 'Settings' %}
{% set selectedSubnavItem = 'settings' %}

{% set fullPageForm = true %}

{% import '_includes/forms.twig' as forms %}

{% block content %}

	<h3>Groups</h3>
	<div class="instructions">
		<p>To edit groups modify the configuration PHP file. Simply create <code style="font-weight: bold;">config/gpt-content-generator.php</code> and include the following content.</p>
		<pre>
&lt;?php
return [
	'groups' => [
		'testGroup' => [
			'name' => 'Test Group'
		]
	]
];
		</pre>
	</div>

	{{ forms.autosuggestField({
		label: 'Api Key',
		instructions: 'An OpenAi api key. We recommend to store it in the .env file',
		name: 'apiKey',
		value: settings.apiKey,
		suggestEnvVars: true
	}) }}

	{{ forms.selectField({
		label: 'Model',
		name: 'gptModel',
		value: settings.gptModel,
		options: {
			'default': 'Default (GPT 4 Turbo Preview)',
			'gpt-4-1106-preview': 'GPT 4 Turbo Preview',
			'gpt-4': 'GPT 4',
			'gpt-3.5-turbo-16k': 'GPT 3.5 Turbo 16k',
			'gpt-3.5-turbo-1106': 'GPT 3.5 Turbo 1106',
			'gpt-3.5-turbo': 'GPT 3.5 Turbo'
		}
	}) }}

	{{ forms.textField({
		type: 'number',
		min: 10,
		label: 'Max Tokens',
		instructions: 'The maximum amount of tokens to returns (default: 256)',
		name: 'maxTokens',
		value: settings.maxTokens
	}) }}

{% endblock %}