{% extends '_layouts/cp' %}
{% set title = 'Settings' %}
{% set selectedSubnavItem = 'settings' %}

{% set fullPageForm = true %}

{% import '_includes/forms.twig' as forms %}

{% block content %}

	{{ forms.editableTableField({
		label: 'Groups',
		instructions: 'Group prompts to display them only on selected fields and control access permissions',
		id: 'groups',
		name: 'groups',
		cols: {
			name: {
				type: 'singleline',
				heading: 'Name'
			},
			key: {
				type: 'singleline',
				heading: 'Handle'
			}
		},
		allowAdd: true,
		allowReorder: true,
		allowDelete: true,
		rows: settings.groups|map((v, k) => { key: k, name: v.name })
	}) }}

	{{ forms.autosuggestField({
		label: 'Api Key',
		instructions: 'An OpenAi api key. We recommend to store it in the .env file',
		name: 'apiKey',
		value: settings.apiKey,
		suggestEnvVars: true
	}) }}

	{{ forms.selectField({
		label: 'Model',
		name: 'gptModel',
		value: settings.gptModel,
		options: {
			'default': 'Default (GPT-4o)',
			'gpt-5': 'GPT-5',
			'gpt-5-mini': 'GPT-5 Mini',
			'gpt-4o': 'GPT-4o',
			'gpt-4': 'GPT-4',
			'gpt-4-turbo': 'GPT-4 Turbo',
			'gpt-3.5-turbo': 'GPT-3.5 Turbo'
		}
	}) }}

	{{ forms.textField({
		type: 'number',
		min: 10,
		label: 'Max Tokens',
		instructions: 'The maximum amount of tokens to returns (default: 1024)',
		name: 'maxTokens',
		value: settings.maxTokens ? settings.maxTokens : ''
	}) }}

{% endblock %}
